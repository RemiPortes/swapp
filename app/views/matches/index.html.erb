<header class="header-cont">
			<div class="row">
			<div class="col-xs-12">
				<%=image_tag("Troker_orange.png", alt: "Logo")%>
			</div>
		</div>
</header>
<div class="profil" style="margin-top:70px">
	<div class="fond" style="opacity:0.3;">
		<%=image_tag("profil.jpg", alt: "profil")%>
	</div>
	<div class="img-round" style="margin-top:-120px;height:120px">
		<%=image_tag("profil.png", alt: "profil 2")%>
		<p class="h4">Jeanne C.</p>
		<p class="h5">Bordeaux - Guingamp</p>
	</div>
</div>
<div class="col-md-12">
	<div class="row">
			<div class="row section padding">
				<div class="col-xs-6">
					<div class="title">
						<h1 class="h5" style="text-transform:uppercase;color:#ff8b00">Matches</h1>
					</div>
				</div>
				<div class="col-xs-6"style="height:35px">
				<p class="h6" style="margin-top: 10px;font-weight: bold;"><%= link_to 'New Match', new_match_path %></p>
				</div>
			</div>


    <% @matches.each do |match| %>
	<div class="row section padding-bottom">
		<div class="col-xs-5">
			<div class="rond" style="float:right"></div>
			<p><%= match.first_item_id %></p>
		</div>
		<div class="col-xs-2">
			<span class="icon-arrows"></span>
		</div>
		<div class="col-xs-5">
			<div class="rond" style="float:right"></div>
			<p><%= match.second_item_id %></p>
		</div>
	</div>
     
        <%= link_to 'Show', match %>
        <%= link_to 'Edit', edit_match_path(match) %>
        <%= link_to 'Destroy', match, method: :delete, data: { confirm: 'Are you sure?' } %>
      
    <% end %>
	
	</div>
</div>